@{ 
    var isEn = Context.Request.Path.StartsWithSegments("/en");
    var languageCode = isEn ? "en" : "ja";
    var description = isEn 
        ? "A Japanese language and culture meetup held every week in Dublin." 
        : "ダブリンで毎週開催されるアイルランドと日本のカルチャーのミートアップです。";
}

<!DOCTYPE html>

<html lang="@languageCode">

<head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/images/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] 🍀 Yotsuba</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="description" content="@description">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Yotsuba</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (isEn)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/ja/index">日本語</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/en/index">English</a>
                            }
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/images/Yotsuba-navi.jpg" width="50" />
            &copy; 2021 &mdash; Yotsuba
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
